              <graphic>
                <ImageView>
                  <image>
                    <Image url="@../img/browser-download-2.png" />
                  </image>
                </ImageView>
              </graphic>
            </Button>
          </children>
          <VBox.margin>
            <Insets top="6.0" />
          </VBox.margin>
        </HBox>
      </children>
      <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
      </padding>
    </VBox>
  </children>
</AnchorPane>

                <PropertyValueFactory property="id" />
              </cellValueFactory>
            </TableColumn>
            <TableColumn editable="false" id="trackerCol" minWidth="75.0" prefWidth="150.0" text="Tracker" fx:id="trackerCol">
              <cellValueFactory>
                <PropertyValueFactory property="tracker" />
              </cellValueFactory>
            </TableColumn>
            <TableColumn editable="false" id="titleCol" minWidth="100.0" prefWidth="350.0" text="Title" fx:id="titleCol">
              <cellValueFactory>
                <PropertyValueFactory property="title" />
              </cellValueFactory>
            </TableColumn>
            <TableColumn editable="false" id="attchNumCol" minWidth="75.0" prefWidth="75.0" text="Attach. #" fx:id="attchNumCol">
              <cellValueFactory>
                <PropertyValueFactory property="attachmentNum" />
              </cellValueFactory>
            </TableColumn>
          </columns>
        </TableView>
        <HBox alignment="CENTER_RIGHT" spacing="10.0">
          <children>
            <ProgressBar fx:id="progressBar" prefWidth="170.0" progress="0.0" />
            <Region maxWidth="1.7976931348623157E308" HBox.hgrow="SOMETIMES" />
